@model Yazar
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="control-label">Yazar Adı</label>
                                    <input asp-for="Ad" type="text" class="form-control" placeholder="Yazar Adı" />
                                    <span asp-validation-for="Ad" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Eklenme Tarihi</label>
                                    <input asp-for="Tarih" type="date" class="form-control" placeholder="Eklenme Tarihi" />
                                    <span asp-validation-for="Tarih" class="text-danger"></span>
                                </div>
                                <div class="container">
                                    <div class="row">
                                        <div class="form-group">
                                            <label>Resim : </label>
                                            <img src='/images/yazarlar/@Html.DisplayFor(model => model.Foto)' style="max-width:200px" />
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label>Resim Değiştir : </label>
                                            <div class="input-group">
                                                <input type="hidden" asp-for="Foto" />
                                                <div class="custom-file">
                                                    <input type="file" name="file" class="custom-file-input">
                                                    <label class="custom-file-label">Foto Yükle</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <input type="submit" value="Güncelle" class="btn btn-primary btn-sm" /> |
                                <a href="/yazar" class="btn btn-secondary btn-sm">Listeye Geri Dön</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>