@model IEnumerable<Kategori>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    @if (TempData["message"] != null)
                    {
                        <partial name="_ResultMessage" model="@(TempData.Get<AlertMessage>("message"))" />
                    }
                    <div class="card-header">
                        <h3 class="card-title">Kategoriler</h3>
                        <a asp-controller="Kategori" asp-action="Create" class="float-right btn btn-sm bg-gradient-info btn-flat">Yeni Ekle +</a>
                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Kategori Adı</th>
                                    <th>Url</th>
                                    <th>Sıra</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count() > 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Ad)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Url)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Sira)
                                            </td>
                                            <td>
                                                <a target="_blank" href="/@item.Url" class="btn btn-secondary btn-sm">İncele</a> |
                                                <a asp-controller="Kategori" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Güncelle</a> |
                                                <a asp-controller="Kategori" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            <div class="alert alert-warning">
                                                <h3>Kategori Bulunamadı</h3>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Kategori Adı</th>
                                    <th>Sayfa Link</th>
                                    <th>Sıra</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>